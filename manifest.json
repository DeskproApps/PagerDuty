{
  "name": "@deskpro-apps/pagerduty",
  "title": "PagerDuty",
  "description": "Streamline incident response, empower your team collaboration, and elevate your operational efficiency with PagerDuty.",
  "version": "1.0.21",
  "scope": "agent",
  "isSingleInstall": false,
  "hasDevMode": true,
  "targets": [{ "target": "ticket_sidebar", "entrypoint": "index.html" }],
  "serveUrl": "https://apps-cdn.deskpro-service.com/__name__/__version__",
  "appStoreUrl": "https://www.deskpro.com/product-embed/apps/pagerduty",
  "settings": {
    "client_id": {
      "title": "Client id",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 10
    },
    "client_secret": {
      "title": "Client Secret",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": true,
      "order": 20
    },
    "instance_url": {
      "title": "PagerDuty Instance URL",
      "description": "E.g. https://deskpro.eu.pagerduty.com",
      "validationPattern": "^https?:\\/\\/.+\\.+pagerduty.com$",
      "type": "string",
      "isRequired": true,
      "isBackendOnly": false,
      "order": 30
    },
    "callback_url": {
      "title": "Callback URL",
      "type": "app_embedded",
      "options": { "entrypoint": "#/admin/callback" },
      "isRequired": false,
      "isBackendOnly": true,
      "order": 40
    }
  },
  "entityAssociations": {
    "linkedIncidents": {
      "entity": "ticket",
      "type": "external_id",
      "title": "Linked Incidents"
    }
  },
  "proxy": {
    "whitelist": [
      {
        "url": "https://identity.pagerduty.com/oauth/.*",
        "methods": ["POST"],
        "timeout": 20
      },
      {
        "url": "https://api.pagerduty.com/.*",
        "methods": ["GET", "POST", "PUT"],
        "timeout": 20
      }
    ]
  }
}
